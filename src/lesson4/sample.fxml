<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" prefHeight="496.0" prefWidth="486.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson4.Controller">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>
    <Label text="Easy Chat">
        <font>
            <Font size="24.0" />
        </font></Label>
    <TextArea fx:id="textArea" editable="false" focusTraversable="false" VBox.vgrow="ALWAYS" />
    <TextField fx:id="textField" onAction="#sendMessageTypeAction" />
    <Button fx:id="sendButton" onAction="#sendMessageTypeAction" text="SEND MESSAGE">
        <font>
            <Font size="18.0" />
        </font></Button>
    <Separator prefHeight="28.0" prefWidth="486.0">
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
    </Separator>
    <Label text="Calculator">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <Separator layoutX="10.0" layoutY="250.0" prefHeight="28.0" prefWidth="486.0">
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
    </Separator>
    <StackPane alignment="CENTER">
        <Text fx:id="count" />
        <Rectangle fill="TRANSPARENT" height="30" stroke="Black" strokeDashOffset="10.0" width="280" />
    </StackPane>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#clickBtnValue" prefWidth="60" text="7" />
        <Button onAction="#clickBtnValue" prefWidth="60" text="8" />
        <Button onAction="#clickBtnValue" prefWidth="60" text="9" />
        <Button onAction="#clickBtnOperations" prefWidth="60" text="/" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#clickBtnValue" prefWidth="60" text="4" />
        <Button onAction="#clickBtnValue" prefWidth="60" text="5" />
        <Button onAction="#clickBtnValue" prefWidth="60" text="6" />
        <Button onAction="#clickBtnOperations" prefWidth="60" text="*" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#clickBtnValue" prefWidth="60" text="1" />
        <Button onAction="#clickBtnValue" prefWidth="60" text="2" />
        <Button onAction="#clickBtnValue" prefWidth="60" text="3" />
        <Button onAction="#clickBtnOperations" prefWidth="60" text="-" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#clickBtnValue" prefWidth="60" text="0" />
        <Button onAction="#clickBtnOperations" prefWidth="130" text="=" />
        <Button onAction="#clickBtnOperations" prefWidth="60" text="+" />



    </HBox>
</VBox>
